    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, transparent, rgba({{ section.settings.card_selected_color | color_to_rgb | split: ',' | join: ',' }}, 0.05));
