<!-- Product Card Component for Shopify Dawn Theme - Streetwear Store -->
{% comment %}
  Renders a product card for streetwear store

  Accepts:
  - card_product: {Object} Product Liquid object (optional)
  - media_aspect_ratio: {String} Size of the product image card. Values are "square" and "portrait". Default is "portrait" (optional)
  - show_secondary_image: {Boolean} Show the secondary image on hover. Default: true (optional)
  - show_vendor: {Boolean} Show the product vendor. Default: false
  - show_rating: {Boolean} Show the product rating. Default: false
  - show_quick_add: {Boolean} Show the quick add button. Default: true
  - section_id: {String} The ID of the section that contains this card.

  Usage:
  {% render 'card-product-streetwear', card_product: product %}
{% endcomment %}

<style>
  .streetwear-product-card {
    position: relative;
    height: 100%;
    background: #fff;
    border: 2px solid transparent;
    transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    overflow: hidden;
    cursor: pointer;
  }

  .streetwear-product-card:hover {
    border-color: var(--color-primary-black, #0A0A0A);
    transform: translateY(-10px) rotateZ(-1deg);
    box-shadow: 
      0 30px 60px rgba(0, 0, 0, 0.12),
      0 10px 20px rgba(0, 0, 0, 0.08);
  }

  .streetwear-product-card__media {
    position: relative;
    aspect-ratio: {% if media_aspect_ratio == 'square' %}1/1{% else %}3/4{% endif %};
    overflow: hidden;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
  }

  .streetwear-product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .streetwear-product-card:hover .streetwear-product-card__image {
    transform: scale(1.1) rotate(2deg);
    filter: contrast(1.1);
  }

  .streetwear-product-card__image--secondary {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  .streetwear-product-card:hover .streetwear-product-card__image--secondary {
    opacity: 1;
  }

  .streetwear-product-card__badges {
    position: absolute;
    top: 1rem;
    left: 1rem;
    z-index: 3;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .streetwear-badge {
    background: var(--color-primary-accent, #FF3333);
    color: white;
    padding: 0.4rem 1rem;
    font-size: 0.7rem;
    font-weight: 800;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    display: inline-block;
    animation: slideInLeft 0.5s ease;
  }

  @keyframes slideInLeft {
    from {
      transform: translateX(-100%);
      opacity: 0;
    }
    to {
      transform: translateX(0);
      opacity: 1;
    }
  }

  .streetwear-badge--soldout {
    background: var(--color-primary-black, #0A0A0A);
  }

  .streetwear-badge--new {
    background: var(--color-neon-green, #00FF88);
    color: var(--color-primary-black, #0A0A0A);
  }

  .streetwear-badge--limited {
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: var(--color-primary-black, #0A0A0A);
  }

  .streetwear-product-card__overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
    padding: 2rem 1rem 1rem;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }

  .streetwear-product-card:hover .streetwear-product-card__overlay {
    transform: translateY(0);
  }

  .streetwear-product-card__quick-actions {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .quick-action-btn {
    flex: 1;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 0.75rem;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .quick-action-btn:hover {
    background: white;
    color: var(--color-primary-black, #0A0A0A);
    transform: translateY(-2px);
  }

  .quick-action-btn--primary {
    background: var(--color-primary-accent, #FF3333);
    border-color: var(--color-primary-accent, #FF3333);
  }

  .streetwear-product-card__info {
    padding: 1.25rem;
    position: relative;
  }

  .streetwear-product-card__vendor {
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gray-500, #71717A);
    margin: 0 0 0.5rem;
  }

  .streetwear-product-card__title {
    font-family: var(--font-display, 'Bebas Neue', sans-serif);
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: 0.02em;
    text-transform: uppercase;
    color: var(--color-primary-black, #0A0A0A);
    margin: 0 0 0.75rem;
    line-height: 1.1;
    transition: color 0.3s ease;
  }

  .streetwear-product-card:hover .streetwear-product-card__title {
    color: var(--color-primary-accent, #FF3333);
  }

  .streetwear-product-card__price-wrapper {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  .streetwear-price {
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 1.2rem;
    font-weight: 800;
    color: var(--color-primary-black, #0A0A0A);
  }

  .streetwear-price--sale {
    color: var(--color-primary-accent, #FF3333);
  }

  .streetwear-price--compare {
    font-size: 1rem;
    font-weight: 400;
    color: var(--color-gray-400, #A1A1AA);
    text-decoration: line-through;
  }

  .streetwear-product-card__rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .rating-stars {
    display: flex;
    gap: 0.1rem;
  }

  .star {
    width: 14px;
    height: 14px;
    fill: var(--color-cyber-yellow, #FFD700);
  }

  .star--empty {
    fill: var(--color-gray-300, #D4D4D8);
  }

  .rating-count {
    font-size: 0.75rem;
    color: var(--color-gray-500, #71717A);
  }

  .streetwear-product-card__sizes {
    display: flex;
    gap: 0.5rem;
    margin-top: 1rem;
    flex-wrap: wrap;
  }

  .size-option {
    width: 35px;
    height: 35px;
    border: 1px solid var(--color-gray-300, #D4D4D8);
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.75rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .size-option:hover {
    border-color: var(--color-primary-black, #0A0A0A);
    background: var(--color-primary-black, #0A0A0A);
    color: white;
  }

  .size-option--unavailable {
    opacity: 0.3;
    cursor: not-allowed;
    pointer-events: none;
  }

  /* Glitch Effect on Hover */
  .streetwear-product-card__glitch {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .streetwear-product-card:hover .streetwear-product-card__glitch {
    opacity: 1;
    animation: glitch 0.3s ease infinite;
  }

  @keyframes glitch {
    0%, 100% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
  }

  /* Loading State */
  .streetwear-product-card--loading .streetwear-product-card__media {
    background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
    background-size: 200% 100%;
    animation: loading 1.5s infinite;
  }

  @keyframes loading {
    0% { background-position: 200% 0; }
    100% { background-position: -200% 0; }
  }

  /* Mobile Optimizations */
  @media (max-width: 767px) {
    .streetwear-product-card__title {
      font-size: 1.25rem;
    }

    .streetwear-price {
      font-size: 1.1rem;
    }

    .streetwear-product-card__info {
      padding: 1rem;
    }
  }
</style>

<article class="streetwear-product-card" data-product-id="{{ card_product.id }}">
  <a href="{{ card_product.url }}" class="streetwear-product-card__link">
    <div class="streetwear-product-card__media">
      {% if card_product.featured_image %}
        <img 
          class="streetwear-product-card__image"
          src="{{ card_product.featured_image | image_url: width: 600 }}"
          alt="{{ card_product.title | escape }}"
          loading="lazy"
          width="600"
          height="{% if media_aspect_ratio == 'square' %}600{% else %}800{% endif %}"
        >
        
        {% if show_secondary_image and card_product.images[1] %}
          <img 
            class="streetwear-product-card__image streetwear-product-card__image--secondary"
            src="{{ card_product.images[1] | image_url: width: 600 }}"
            alt="{{ card_product.title | escape }}"
            loading="lazy"
            width="600"
            height="{% if media_aspect_ratio == 'square' %}600{% else %}800{% endif %}"
          >
        {% endif %}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'streetwear-product-card__image' }}
      {% endif %}

      <div class="streetwear-product-card__badges">
        {% if card_product.available == false %}
          <span class="streetwear-badge streetwear-badge--soldout">Sold Out</span>
        {% elsif card_product.compare_at_price > card_product.price %}
          <span class="streetwear-badge">
            {% assign discount = card_product.compare_at_price | minus: card_product.price | times: 100 | divided_by: card_product.compare_at_price %}
            -{{ discount }}% Off
          </span>
        {% endif %}
        
        {% if card_product.metafields.custom.is_new == true %}
          <span class="streetwear-badge streetwear-badge--new">New</span>
        {% endif %}
        
        {% if card_product.metafields.custom.is_limited == true %}
          <span class="streetwear-badge streetwear-badge--limited">Limited</span>
        {% endif %}
      </div>

      {% if show_quick_add %}
        <div class="streetwear-product-card__overlay">
          <div class="streetwear-product-card__quick-actions">
            <button class="quick-action-btn quick-action-btn--primary" data-add-to-cart="{{ card_product.selected_or_first_available_variant.id }}">
              Add to Cart
            </button>
            <button class="quick-action-btn" data-quick-view="{{ card_product.id }}">
              Quick View
            </button>
          </div>
        </div>
      {% endif %}
    </div>

    <div class="streetwear-product-card__info">
      {% if show_vendor and card_product.vendor %}
        <p class="streetwear-product-card__vendor">{{ card_product.vendor }}</p>
      {% endif %}
      
      <h3 class="streetwear-product-card__title">{{ card_product.title }}</h3>
      
      <div class="streetwear-product-card__price-wrapper">
        {% if card_product.compare_at_price > card_product.price %}
          <span class="streetwear-price streetwear-price--sale">{{ card_product.price | money }}</span>
          <span class="streetwear-price streetwear-price--compare">{{ card_product.compare_at_price | money }}</span>
        {% else %}
          <span class="streetwear-price">{{ card_product.price | money }}</span>
        {% endif %}
      </div>

      {% if show_rating and card_product.metafields.reviews.rating.value != blank %}
        {% assign rating = card_product.metafields.reviews.rating.value | round %}
        {% assign rating_count = card_product.metafields.reviews.rating_count %}
        <div class="streetwear-product-card__rating">
          <div class="rating-stars">
            {% for i in (1..5) %}
              {% if i <= rating %}
                <svg class="star" viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
              {% else %}
                <svg class="star star--empty" viewBox="0 0 24 24">
                  <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                </svg>
              {% endif %}
            {% endfor %}
          </div>
          <span class="rating-count">({{ rating_count }})</span>
        </div>
      {% endif %}

      {% comment %} Optional: Show available sizes {% endcomment %}
      {% if card_product.options_with_values %}
        {% for option in card_product.options_with_values %}
          {% if option.name == 'Size' %}
            <div class="streetwear-product-card__sizes">
              {% for value in option.values limit: 5 %}
                <div class="size-option" data-size="{{ value }}">
                  {{ value }}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>

    <div class="streetwear-product-card__glitch"></div>
  </a>
</article>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Quick Add to Cart functionality
    const quickAddButtons = document.querySelectorAll('[data-add-to-cart]');
    quickAddButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const variantId = this.dataset.addToCart;
        const formData = {
          'items': [{
            'id': variantId,
            'quantity': 1
          }]
        };

        fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
          },
          body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
          // Update cart drawer or notification
          document.dispatchEvent(new CustomEvent('cart:updated', { detail: data }));
          
          // Visual feedback
          this.textContent = 'Added!';
          setTimeout(() => {
            this.textContent = 'Add to Cart';
          }, 2000);
        })
        .catch(error => {
          console.error('Error adding to cart:', error);
        });
      });
    });

    // Quick View functionality
    const quickViewButtons = document.querySelectorAll('[data-quick-view]');
    quickViewButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        e.stopPropagation();
        
        const productId = this.dataset.quickView;
        // Trigger quick view modal
        document.dispatchEvent(new CustomEvent('quickview:open', { detail: { productId } }));
      });
    });
  });
</script>